 @model IEnumerable<Travelogue.Models.Blogs.SubPost>

<!-- Categories Widget -->
 <div class="card-custom my-4">
     <div class="card-header row" style="margin: 0;padding-left: 0;">
         <h5 class="col-md-9">Categories</h5>
         <button id="createSubPost" class="btn btn-sm btn-primary">Create</button>
     </div>
     
     <div class="card-body">
         <div class="row">
             <div class="col-lg-6">
                 <ul class="list-unstyled mb-0">
                     @foreach (var cat in Model.ToList().Where((c, i) => i % 2 == 0))
                     {
                         <li>
                             <a href="#" class="sub-post-category">@cat.Category</a>
                         </li>
                     }
                 </ul>
             </div>
             <div class="col-lg-6">
                 <ul class="list-unstyled mb-0">
                     @foreach (var cat in Model.ToList().Where((c, i) => i % 2 != 0))
                     {
                         <li>
                             <a href="#" class="sub-post-category">@cat.Category</a>
                         </li>
                     }
                 </ul>
             </div>
         </div>
     </div>
 </div>
