@model Travelogue.ViewModels.BlogViewModel
@{
    ViewData["Title"] = "Edit Blog";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <span asp-validation-summary="ModelOnly"></span>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }
            
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="BlogTitle" class="">Title</label>
                <input asp-for="BlogTitle" class="form-control" />
                <span asp-validation-for="BlogTitle" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea cols="40" rows="10" asp-for="Description" type="text" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="AllowsComments">Allow Comments?</label>
                <input type="checkbox" asp-for="AllowsComments" class="form-control" />
                <span asp-validation-for="AllowsComments" class="text-muted"></span>
            </div>
            <div>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-default">Cancel</a>
                <input type="submit" value="Update Post" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

