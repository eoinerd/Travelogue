@model List<Travelogue.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Travel";
}

@if (Model.Any())
{
    <header>
        <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselIndicators" data-slide-to="1"></li>
                <li data-target="#carouselIndicators" data-slide-to="2"></li>
                <li data-target="#carouselIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                @foreach (var item in Model)
                {
                    <div class="carousel-item" style="background-image: url('@item.Image')">
                        <div class="carousel-caption d-none d-md-block">
                            <h3 class="display-4">@item.Title</h3>
                        </div>
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </header>
}

 <section>
    <div class="container">
        <section class="content-section bg-light" style="padding-top: 30px; padding-bottom: 30px;">
            <div class="container text-center">             
                <div class="row">
                    <div class="mx-auto">
                        <img src="~/favicon.png" />
                        <h1>Catalogue your travels today with Travelogue!</h1><h4>
                            Our application makes it easy for users to make stories from their travels
                        </h4>
                        <hr />
                    </div>
                    <div class="mx-auto">
                        <video autoplay volume="0.0" controls="controls" style="width: 60%;">
                            <source src="~/content/TinyTake%20by%20MangoApps-07-05-2019-06-29-15.mp4" type="video/mp4" />
                        </video>
                    </div>
                    <div class="mx-auto" style="width: 100%; padding-top: 30px;">
                        <ol class="mx-auto" style="width: 40%;list-style-type: square;">
                            <li><h2 class="lead mb-3">Create trips with locations on a map</h2></li>
                            <li><h3 class="lead mb-3">Write blog posts about each location</h3></li>  
                            <li><h3 class="lead mb-3">Add subposts to existing posts</h3></li>
                        </ol>
                        <hr/>
                        @*<a class="btn btn-dark btn-xl js-scroll-trigger" href="#other1">Other 1</a>
                        <a class="btn btn-dark btn-xl js-scroll-trigger" href="#other2">Other 2</a>*@
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
