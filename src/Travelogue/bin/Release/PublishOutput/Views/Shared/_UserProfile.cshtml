
<button id="sidebarToggle" class="btn btn-lg side-toggle">
    <img src="@User.Claims.First(x => x.Type == "ProfileImage").Value" alt="headshot" class="headshot-nav" />
</button>
<div id="sidebar" class="hide-sidebar">
    <img src="@User.Claims.First(x => x.Type == "ProfileImage").Value" alt="headshot" class="headshot" />
    <ul class="nav" style="float:right;display:inline-block;">
        <li><a class="btn btn-primary" asp-area="" asp-controller="Auth" asp-action="ViewProfile">View Profile</a></li>
        <li><a class="btn btn-primary" style="margin-top: 18px;margin-left: 4px;" asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a></li>
    </ul>
    <span id="userName">@User.Identity.Name</span>
</div>